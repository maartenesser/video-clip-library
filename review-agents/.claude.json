{
  "mcps": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation for visual testing and UI validation",
      "config": {
        "browser": "chromium",
        "headless": false,
        "viewport": {
          "width": 1280,
          "height": 720
        },
        "timeout": 30000,
        "screenshot": {
          "type": "png",
          "fullPage": true,
          "path": "./screenshots"
        },
        "session": {
          "persist": true,
          "storageState": ".auth/session.json"
        },
        "defaultViewports": [375, 768, 1024, 1440, 1920]
      }
    },
    "executeautomation-playwright": {
      "command": "npx",
      "args": ["@executeautomation/playwright-mcp-server"],
      "description": "Alternative Playwright server with enhanced natural language support",
      "enabled": false,
      "config": {
        "apiTesting": true,
        "visualMode": true,
        "naturalLanguage": true
      }
    }
  },
  "agents": {
    "design-review": {
      "path": "./agents/design-review.md",
      "tools": ["playwright"],
      "autoTrigger": {
        "onPR": true,
        "patterns": ["*.css", "*.tsx", "*.jsx", "*.vue"]
      }
    },
    "code-review": {
      "path": "./agents/code-review.md",
      "tools": ["*"],
      "autoTrigger": {
        "onPR": true,
        "patterns": ["*.js", "*.ts", "*.py", "*.java", "*.go"]
      }
    }
  },
  "workflows": {
    "design": {
      "agent": "design-review",
      "defaultViewports": [375, 768, 1024, 1440],
      "accessibilityLevel": "AA",
      "visualDiffThreshold": 0.1
    },
    "code": {
      "agent": "code-review",
      "severity": {
        "security": "error",
        "performance": "warning",
        "style": "info"
      },
      "minCoverage": 80
    },
    "integration": {
      "agents": ["design-review", "code-review"],
      "parallel": false,
      "stopOnError": true
    }
  },
  "settings": {
    "autoReview": {
      "enabled": true,
      "triggers": ["pr_created", "pr_updated"],
      "excludePaths": ["node_modules", "dist", "build", ".git"]
    },
    "reporting": {
      "format": "markdown",
      "outputPath": "./reviews",
      "includeScreenshots": true,
      "verbosity": "detailed"
    },
    "performance": {
      "cacheEnabled": true,
      "cacheDuration": 86400,
      "parallelExecution": true,
      "maxConcurrent": 4
    }
  },
  "projectRules": {
    "design": {
      "colors": {
        "primary": "#007AFF",
        "secondary": "#5856D6",
        "success": "#34C759",
        "warning": "#FF9500",
        "danger": "#FF3B30"
      },
      "typography": {
        "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto",
        "scale": {
          "h1": "2.5rem",
          "h2": "2rem",
          "h3": "1.5rem",
          "body": "1rem",
          "small": "0.875rem"
        }
      },
      "spacing": {
        "unit": 8,
        "scale": [0, 8, 16, 24, 32, 40, 48, 64, 80, 96]
      }
    },
    "code": {
      "maxComplexity": 10,
      "maxLineLength": 100,
      "requireTests": true,
      "enforceTypes": true,
      "disallowConsoleLog": true
    }
  },
  "customCommands": {
    "review:all": "Run both design and code review on current changes",
    "review:accessibility": "Run comprehensive accessibility audit",
    "review:security": "Run security-focused code review",
    "test:generate": "Generate tests for recent changes",
    "test:visual": "Run visual regression tests"
  }
}